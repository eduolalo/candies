<script type="text/x-handlebars-template" id="candies-main-template">
  <div class="well">
    <div class="row">
      <div class="span4">
        <form action="" class="navbar-search">
          <input type="text" id="search" class="search-query" placeholder="Search">
        </form>
      </div>
      <div class="span5 text-right">
        <a id="newCandy" class="btn pull-right" href="#new-candy">{{ __ "Add your Candy" }} <i class="icon-plus-sign"></i></a>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="span10">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th>{{ __ "Nombre" }}</th>
              <th>{{ __ "Descripción" }}</th>
              <th>{{ __ "Versión" }}</th>
            </tr>
              {{# each candies }}
                <tr>
                  <td><a href="{{ url }}" target="blank">{{ name }}</a></td>
                  <td>{{ description }}</td>
                  <td>{{ version }}</td>
                </tr>
              {{/ each }}
          </tbody>
        </table>
      </div>
    </div>
    <div id="cbox" style="display:none;">
      <div id="new-candy"></div>
    </div>
  </div>
  <div>
  </div>
</script>
